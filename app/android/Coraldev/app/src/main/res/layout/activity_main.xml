<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="google.coraldev.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/btnScan"
        android:clickable="true"
        android:enabled="true"
        android:textStyle="bold"
        android:onClick="scanLeDevices"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/scanResultList" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterText"
        android:text="coralNRF"
        android:layout_above="@+id/scanResultList"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="87dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanResultList"
        android:layout_below="@+id/btnScan"
        android:layout_toStartOf="@+id/filterText"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
