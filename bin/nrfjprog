#!/usr/bin/env python

import sys
import signal
import subprocess

sys.tracebacklimit = 0
def main():
    base_command = "openocd -s ~/local/openocd/ -f interface/jlink.cfg -c 'transport select swd' -c 'set WORKAREASIZE 0' -f target/nrf51.cfg "

    if len(sys.argv) < 2:
        command = base_command + " -c init -c reset -c exit"
    else:
        command = base_command + "-c 'program %s reset exit'" % sys.argv[1]

    print "Executing\033[1m", command, "\033[0m"
    process = subprocess.call(command, shell=True)

    def signal_handler(signal, frame):
        process.kill()
        sys.exit(1)

    signal.signal(signal.SIGINT, signal_handler)

if __name__ == "__main__":
    main()
